generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Movie {
  id String @id @default(uuid())
  title String
  category String
  duration Int
  sinopsis String
  releaseYear Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("movies")
}